<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/entity_title"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/entity_author"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <ImageButton
        android:id="@+id/delete_entity"
        android:background="@drawable/remove"
        android:layout_height="25dp"
        android:layout_width="25dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        />

    <ImageButton
        android:id="@+id/edit_entity"
        android:background="@drawable/edit"
        android:layout_height="23dp"
        android:layout_width="23dp"
        android:layout_marginEnd="8dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/delete_entity"
        />

    <ImageButton
        android:id="@+id/export_entity"
        android:background="@drawable/export"
        android:layout_height="25dp"
        android:layout_width="25dp"
        android:layout_marginEnd="8dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/edit_entity"
        />
</RelativeLayout>